{
  "name": "@chubbyts/chubbyts-http-error",
  "version": "2.2.0",
  "description": "Creates http error which can be catched and converted to error responses.",
  "keywords": [
    "chubbyts",
    "http error",
    "http-error"
  ],
  "author": "Dominik Zogg",
  "license": "MIT",
  "repository": "chubbyts/chubbyts-http-error",
  "scripts": {
    "cs-fix": "prettier --write src tests",
    "cs": "prettier --check src tests",
    "lint-fix": "eslint src tests --fix",
    "lint": "eslint src tests",
    "test": "jest",
    "infection": "stryker run",
    "build": "rm -Rf dist && tsc",
    "prepare": "npm run build"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 100
      }
    }
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=16"
  },
  "devDependencies": {
    "@chubbyts/chubbyts-eslint": "^1.1.1",
    "@stryker-mutator/core": "^6.4.2",
    "@stryker-mutator/jest-runner": "^6.4.2",
    "@types/jest": "^29.5.1",
    "@types/node": "^20.1.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
